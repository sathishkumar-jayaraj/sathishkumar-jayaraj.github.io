<div class="row large-spaced">
  <div class="col-md-8 col-sm-10 col-xs-12 col-centered">
    <h2>Recent Articles</h2>
    <ol>
      <% blog.articles[0...5].each do |article| %>
        <li class="half-spaced">
          <%= link_to article.title, article %>
        </li>
      <% end %>
    </ol>
  </div>
</div>
